<UserControl
    x:Class="WinGoTag.UserControls.CarouselItemUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinGoTag.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    
    d:DesignWidth="400" VerticalAlignment="Center">

    <Grid>
        <Image x:Name="CarouImage" MaxWidth="{Binding Images[0].Width}" MaxHeight="{Binding Images[0].Height}" Stretch="Uniform"/>
        <MediaElement x:Name="CarouVideo" AutoPlay="False" AreTransportControlsEnabled="True" Tapped="Media_Tapped" Stretch="Fill"/>
    </Grid>
</UserControl>
